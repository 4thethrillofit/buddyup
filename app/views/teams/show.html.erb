<div class='row team-members'>
  <% team = TeamPresenter.new(@team, self) %>
  <h3>Team: <%= team.name %></h3>
  <%= link_to 'Delete Team', team_path(@team), method: 'DELETE', class: "btn btn-danger" %>

  <div class='new-member-form'>
    <%= render :partial => 'new_member_form', locals: { team: @team } %>
  </div>

  <%= link_to 'Send weekly pairs', send_weekly_pairs_team_path(@team), class: 'btn btn-warning' %>

  <div class='team-members-show'>
    <h4>Members</h4>
    <%= render :partial => 'team_members_list', locals: { team: team } %>
  </div>

</div>